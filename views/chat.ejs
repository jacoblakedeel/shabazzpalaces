<!doctype html>
<html lang="en">
    <head>
        <%- include('partials/template.ejs')  %> 

    </head>
    <body>
        <div class="container-fluid p-0 parallax">
            <%- include('partials/content.ejs')  %><br><br><br>
            
            <main>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <article class="chat">
                                <header class="chat-header">
                                    <div class="row2">
                                        
                                    </div>
                                    <div class="h3 chat-title alhambraText2 row mt-5"><h1>Chat Palace</h1>
                                    </div><!-- chat-title -->
                                </header><!-- chat-header -->
                                <form name="chatForm" class="form-horizontal chat-form bigShouldersWhite">
                                    <div class="form-group">
                                        <label for="chat-username" class="col-sm-2 control-label">Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="chat-username" required
                                                placeholder="Enter your name">
                                        </div><!-- col-sm-10 -->
                                    </div><!-- form-group -->
                                    <div class="form-group">
                                        <label for="chat-message" class="col-sm-2 control-label bigShouldersWhite">Message</label>
                                        <div class="col-sm-10">
                                            <div class="input-group">
                                                <input type="text" placeholder="Enter a message, then press enter"
                                                    class="form-control" id="chat-message" rows="2" autocomplete="off" required>
                                                <span class="input-group-btn">&nbsp;
                                                    <button id="chat-submit" class="btn btn-outline-danger buttonBackground alhambraText2" type="submit">Chat</button>
                                                </span>
                                            </div><!-- input-group -->
                                        </div><!-- col-sm-10 -->
                                    </div><!-- form-group -->
                                </form>
                                <div class="panel panel-default">
                                    <div class="panel-body chat-display bigShouldersWhite">
                                        <p class="text-muted chat-text bigShouldersWhite">add to the chat using forms above</p>
                                    </div><!-- panel-body -->
                                </div><!-- panel-default -->
                            </article><!-- article -->
                        </div><!-- col-sm-12 -->
                    </div><!-- row -->
                </div><!-- container -->
            </main>
        </div>
        
        <!--script partial-->>
        <%- include('partials/jsdefault.ejs')  %> 
    </body>
</html>